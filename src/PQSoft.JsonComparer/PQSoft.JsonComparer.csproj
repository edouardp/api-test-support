<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>PQSoft.JsonComparer</AssemblyName>
    <PackageId>PQSoft.JsonComparer</PackageId>
    <Version>1.0.0</Version>
    <Authors>PQSoft</Authors>
    <Company>PQSoft</Company>
    <Product>PQSoft API Test Support</Product>
    <Description>A powerful library for comparing JSON documents with token support and function execution. Supports exact matching, subset matching, token extraction, and function execution for dynamic JSON comparisons.</Description>
    <PackageTags>json;comparison;testing;api;token;extraction;function</PackageTags>
    <PackageProjectUrl>https://github.com/edouardp/api-test-support</PackageProjectUrl>
    <RepositoryUrl>https://github.com/edouardp/api-test-support</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="9.0.0" />
  </ItemGroup>

</Project>